<script>
  //onclick function
  function sendEmail() {
    window.location.href = "mailto:antoine.ando@protonmail.com";
  }

  const button = document.querySelector("[data-email-button]");
  if (button) {
    button.addEventListener("click", sendEmail);
  }
</script>

<script is:inline>
  const isMobile = window.matchMedia("(max-width: 640px)").matches;

  gsap.to("#rocket", {
    y: "100vh",
    scale: 2.5,
    duration: 0.5,
    ease: "back.out(1)",
    //When the top of the viewport reaches the bottom of #section1, trigger the animation
    scrollTrigger: {
      // scroller: "main",
      trigger: "#section2",
      start: "top center",
      toggleActions: "play play reverse reverse",
      // fastScrollEnd: 3000,
    },
  });

  const name = document.querySelector("#name");

  gsap.to("#name", {
    //underline
    "--line-width": 100,
    duration: 0.6,
    delay: 0.2,
    scrollTrigger: {
      // scroller: "main",
      trigger: "#section2",
      start: "center bottom",
    },
  });

  gsap.to("#sun", {
    //scale: 1.5,
    duration: 2,
    yoyo: true,
    repeat: -1,
    ease: "power1.inOut",
    "--shadow": "0px -20px 20px 0px rgba(255, 250, 233, 0.9)",
  });

  const rocket = document.querySelector("#rocket");
  if (rocket) {
    rocket.addEventListener("click", () => {
      //Scroll to top
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  }
</script>
