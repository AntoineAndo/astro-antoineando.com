---
import type { GetStaticPaths } from "astro";
import Layout from "../../layouts/Layout.astro";
import { sanityClient } from "sanity:client";
import SanityPicture, { picture } from "astro-sanity-picture";
import project from "../../../sanity/schemas/project";

export const getStaticPaths = (async () => {
  const projects = await sanityClient.fetch(
    `*[_type == "project" && defined(slug)] | order(publishedAt desc) {
        title,
        slug,
        shortDescription,
        ${picture("mainImage")},
        description
    }`
  );

  return projects.map((project: any) => {
    console.log(project);
    return {
      params: { title: project.title, slug: project.slug.current },
      props: {
        title: project.title,
        mainImage: project.mainImage.asset.url,
      },
    };
  });
}) satisfies GetStaticPaths;

const { title, mainImage } = Astro.props;
---

<Layout title={title + " - Antoine Ando"}>
  <h1 class="text-4xl mb-5">{title}</h1>
  <div class="w-1/2">
    <img src={mainImage} alt="Main image" class="" />
  </div>
</Layout>
